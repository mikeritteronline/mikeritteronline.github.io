    </div>
    <div class="col-lg">
      <form name="consultation-request" method="post" data-netlify="true" class="bg-warning rounded-3 p-3 d-flex flex-column justify-content-center">
        <h2>Request a Consultation</h2>
        <fieldset>
          <legend>Contact Information</legend>
          <div  class="input-group my-3">
            <label for="contact_name" class="input-group-text bg-light w-25">Name</label>
            <input type="name" id="contact_name"  name="contact_name" class="form-control" required aria-required="true">
          </div>
          <div  class="input-group my-3">
            <label for="contact_email" class="input-group-text bg-light w-25">E-mail</label>
            <input type="email" id="contact_email" name="contact_email" class="form-control" required aria-required="true">
          </div>
          <div  class="input-group  my-3">
            <label for="contact_tel" class="input-group-text bg-light w-25">Telephone</label>
            <input type="tel" id="contact_tel" name="contact_tel" class="form-control" required aria-required="true">
          </div>
          <div>
            <label for="contact_software" class="form-label">Preferred Method (select one)</label>
            <select name="contact_software" id="contact_software" class="form-control" required aria-required="true">
              <option value="skype">Skype</option>
              <option value="zoom">Zoom</option>
              <option value="facetime">Face Time</option>
              <option value="telephone">Telephone</option>
              <option value="email">E-mail</option>
            </select>
            <div class="my-3">
              <label for="contact_handle" class="form-label">Handle (if different from above)</label>
              <input type="text" class="form-control" id="contact_handle" name="contact_handle">
            </div>
          </div>
        </fieldset>
        <fieldset>
          <legend>Project Information</legend>
          <div class="my-3">
            <label for="project_industry" class="form-label">Industry</label>
            <select name="project_industry" id="project_industry" class="form-control" required aria-required="true">
              <option value="local">Local Business</option>
              <option value="congregation">Religious Congregation</option>
              <option value="organization">Organization</option>
              <option value="product">Product</option>
              <option value="service">Service</option>
              <option value="event">Event</option>
              <option value="musician">Musician</option>
              <option value="photographer">Photographer</option>
              <option value="visual arts">Visual Arts</option>
              <option value="writer">Writer</option>
              <option value="consultant">Consultant</option>
              <option value="other" selected>Other</option>
            </select>
          </div>
          <div class="my-3">
            <label for="project_location" class="form-label">Location</label>
            <input type="text" id="project_location" name="project_location" class="form-control" required aria-required="true">
          </div>
          <div class="my-3">
            <label for="project_summary" class="form-label">Summary</label>
            <textarea type="text" id="project_summary" name="project_summary" class="form-control" required aria-required="true"></textarea>
          </div>
          <div class="my-3">
            <label for="project_launch" class="form-label">Delivery Date</label>
            <input type="date" id="project_launch" name="project_launch" class="form-control">
          </div>
        </fieldset>
        <input type="submit" class="btn btn-light my-3" value="Submit">
      </form>
    </div>
  </div>
